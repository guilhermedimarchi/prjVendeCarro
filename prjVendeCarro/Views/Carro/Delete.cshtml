@model prjVendeCarro.Models.CarroModels

@{
    ViewBag.Title = "Excluir";
}
<div id="Excluir" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Html.DisplayFor(model => model.Nome)</h4>
            </div>
            <div class="modal-body">
                <p>Tem certeza de que deseja excluir?</p>
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <form method="post" action="/Carro/Delete/@Model.Id">
                        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-trash"> </i> Sim</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                    </form>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->